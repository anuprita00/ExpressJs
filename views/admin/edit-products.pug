extends ../includes/navigation.pug
block styles
  link(rel="stylesheet", href="/CSS/form.css")
  link(rel="stylesheet", href="/CSS/product.css")
  
block content
  form.product-form(action=`/admin/` + (editing ? 'edit' : 'add') + `-product`, method="POST")
    .form-control
      label(for="title") Title
      input(type="text", name="title", value=(editing ? product.title : ''))#title 
    .form-control
      label(for="imageUrl") Image URL
      input(type="text", name="imageUrl", value=(editing ? product.imageUrl : ''))#imageUrl
    .form-control
      label(for="price") Price
      input(type="text", name="price", value=(editing ? product.price : ''))#price
    .form-control
      label(for="description") Description
      textarea(name="description")#description #{(editing ? product.description : '')}
    button.btn(type="submit") #{(editing ? 'Update' : 'Add')} Product
    
